<!-- Site Descriptor Info: http://maven.apache.org/doxia/doxia-sitetools/doxia-decoration-model/decoration.html -->

<!-- Multi-Module Site-XML: http://stackoverflow.com/questions/5976123/maven-site-for-multi-module -->
<!-- Multi Module: http://tech-mind.blogspot.de/2009/01/configure-site-plugin-for-maven-multi.html -->
<!-- http://stackoverflow.com/questions/3422151/maven-site-plugin-how-does-menu-inheritance-work -->

<project
        xmlns="http://maven.apache.org/DECORATION/1.3.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/DECORATION/1.3.0 http://maven.apache.org/xsd/decoration-1.3.0.xsd"
        name="Joala Parent">

  <skin>
    <!-- see http://maven.apache.org/skins/maven-fluido-skin/ -->
    <groupId>org.apache.maven.skins</groupId>
    <artifactId>maven-fluido-skin</artifactId>
    <version>1.3.0</version>
  </skin>

  <body>
    <links>
      <item name="CoreMedia" href="http://www.coremedia.com/"/>
      <item name="GitHub Repository" href="http://github.com/CoreMedia/joala/"/>
      <item name="GitHub Pages" href="http://coremedia.github.com/joala/"/>
    </links>

    <breadcrumbs>
      <item href=".." name="V${project.version}"/>
      <item href="../${project.artifactId}/" name="${project.name}"/>
    </breadcrumbs>

    <menu name="Joala" inherit="bottom">
      <!-- ref modules and parent don't work for this project; creating menu manually -->
      <item name="Home" href=".."/>
      <item name="Modules" href="../modules.html">
        <description><![CDATA[
          Overview of all modules which are included in Joala.
        ]]></description>
        <item name="Parent" href="../joala-parent/"/>
        <item name="Conditions" href="../joala-conditions/"/>
        <item name="Matchers" href="../joala-matchers/"/>
        <item name="BOM POM" href="../joala-bom/"/>
        <item name="3rd Party BOM POM" href="../joala-thirdparty-bom/"/>
      </item>
    </menu>

    <menu ref="reports"/>

  </body>

  <custom>
    <fluidoSkin>
      <!-- see http://maven.apache.org/skins/maven-fluido-skin/ -->
      <topBarEnabled>true</topBarEnabled>
      <topBarContainerStyle>width: 80%;</topBarContainerStyle>
      <sideBarEnabled>false</sideBarEnabled>
      <sourceLineNumbersEnabled>true</sourceLineNumbersEnabled>
      <gitHub>
        <projectId>CoreMedia/joala</projectId>
      </gitHub>
    </fluidoSkin>
  </custom>
</project>
