<!--
 Include with appenders prepared for logging.

 Usage:

  <include resource="bdd-logback-appender.xml"/>

  <logger name="${bdd.story.logger.name}" additivity="false" level="${bdd.log.level}">
    <appender-ref ref="story-console"/>
    ... Additional appenders, if you like
  </logger>

  <logger name="${bdd.steps.logger.name}" additivity="false" level="${bdd.log.level}">
    <appender-ref ref="step-console"/>
    ... Additional appenders, if you like
  </logger>
-->
<included>
  <!-- BDD Log Configuration -->
  <property name="bdd.step.indent" value="..... "/>
  <property name="bdd.log.pattern" value="%message%n%xEx{5}"/>
  <property name="bdd.log.level" value="info"/>
  <property name="bdd.steps.logger.name" value="com.coremedia.uitesting.junit.bdd.aop.JUnitAopStepsLogger"/>
  <property name="bdd.story.logger.name" value="com.coremedia.uitesting.junit.bdd.watcher.JUnitScenarioWatcher"/>

  <appender name="step-console" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>${bdd.step.indent}${bdd.log.pattern}</pattern>
    </encoder>
  </appender>
  <appender name="story-console" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>${bdd.log.pattern}</pattern>
    </encoder>
  </appender>
</included>