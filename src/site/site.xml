<project
        xmlns="http://maven.apache.org/DECORATION/1.3.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/DECORATION/1.3.0 http://maven.apache.org/xsd/decoration-1.3.0.xsd"
        name="Joala Main">

  <skin>
    <!-- see http://maven.apache.org/skins/maven-fluido-skin/ -->
    <groupId>org.apache.maven.skins</groupId>
    <artifactId>maven-fluido-skin</artifactId>
    <version>1.3.0</version>
  </skin>

  <body>
    <links>
      <item name="CoreMedia" href="http://www.coremedia.com/"/>
      <item name="GitHub Repository" href="http://github.com/CoreMedia/joala/"/>
      <item name="GitHub Pages" href="http://coremedia.github.com/joala/"/>
    </links>

    <breadcrumbs>
      <item href="index.html" name="${project.name}"/>
    </breadcrumbs>

    <menu name="Joala" inherit="bottom">
      <!-- ref modules and parent don't work for this project; creating menu manually -->
      <item name="Home" href="index.html"/>
      <item name="Parent" href="joala-parent/index.html">
        <item name="Conditions" href="joala-parent/joala-conditions/index.html"/>
        <item name="Matchers" href="joala-parent/joala-matchers/index.html"/>
      </item>
      <item name="BOM POM" href="joala-bom/index.html"/>
      <item name="3rd Party BOM POM" href="joala-thirdparty-bom/index.html"/>
      <item name="3rd Party Test BOM POM" href="joala-thirdparty-test-bom/index.html"/>
    </menu>

    <menu ref="parent" inherit="top"/>

    <menu ref="modules" inherit="bottom"/>

    <menu ref="reports" inherit="bottom"/>

  </body>

  <custom>
    <fluidoSkin>
      <!-- see http://maven.apache.org/skins/maven-fluido-skin/ -->
      <topBarEnabled>true</topBarEnabled>
      <topBarContainerStyle>width: 80%;</topBarContainerStyle>
      <sideBarEnabled>false</sideBarEnabled>
      <sourceLineNumbersEnabled>true</sourceLineNumbersEnabled>
    </fluidoSkin>
  </custom>
</project>
